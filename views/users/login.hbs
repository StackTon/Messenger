<form class="form center-form" method="POST" action="/login">
  <h2>Login</h2>
  <div class="form-group">
    <label for="username">Username</label>
    <input class="input-field" id="username" name="username" type="text"/>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input class="input-field" id="password" name="password" type="password"/>
  </div>
  <div class="form-group">
    <input class="form-btn btn" type="submit" value="Login"/>
  </div>
</form>